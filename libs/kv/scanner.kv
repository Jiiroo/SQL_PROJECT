<Scanner>
    name: 'scanner'
    on_leave:
        progress_relative = 0
        progress_percent = 0

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "./assets/app_bg.png"


    Carousel:
        id: board
        size_hint: .5, 1
        direction: 'right'
        loop: True
        
        MyCard:
            size_hint: .6, .6
            style: 'filled'
            radius: [36,]
            pos_hint: {"center_x": .5, "center_y": .5}
            orientation: 'vertical'

            canvas:
                Color:
                    rgba: app.colors(0)
                RoundedRectangle:
                    radius: [36,]
                    size: self.size
                    pos: self.pos
            MDLabel:
                text: '[font=./assets/fonts/Rubik-Medium.ttf][color=#ffffff]Always wear your facemask[/color][/font]'
                markup: True
                halign: 'center'
                font_style: 'H5'

            FloatLayout:
                    
                Image:
                    size_hint_y: None  # Tells the layout to ignore the size_hint in y dir
                    height: dp(275)
                    source: './assets/mask.jpg'
                    pos_hint: {'center_x': .5, 'center_y': .8}

        MyCard:
            size_hint: .6, .6
            style: 'filled'
            radius: [36,]
            pos_hint: {"center_x": .5, "center_y": .5}
            orientation: 'vertical'

