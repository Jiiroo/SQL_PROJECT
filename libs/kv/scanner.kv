        size_hint_y: None  # Tells the layout to ignore the size_hint in y dir
        height: dp(400)
        allow_strecth: True
        keep_ratio: True
        pos: (400, 300)
    
    MDLabel:
        text: '[color=#ffffff]Visitor Count[/color]'
        markup: True
        font_style: 'H3'
        pos_hint: {'center_x': 1.18, 'center_y': .3}

    AKCircularProgress:
        id: progress_relative
        current_percent: 1
        pos_hint: {"center_x": .75, "center_y": .17}
        size_hint: None, None
        size: dp(100), dp(100)
        line_width: '6dp'
        # percent_type: "percent"
        start_deg: 240
        end_deg: 480
        percent_type: "relative"
        max_percent: 100
        percent_size: '25dp'
        background_line_width: '3dp'
        circle_color: [1,1,1,1]
        background_circle_color: [1,1,1,1]
        percent_color: [1,1,1,1]
